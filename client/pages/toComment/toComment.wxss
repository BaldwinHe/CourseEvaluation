/* pages/toComment/toComment.wxss */
page{
background: #E8ECEF;
}

.questionList{
  position: absolute;
}
.question-block{
  position: relative;
  padding-top: 30rpx;
  left: 65rpx;
}
.question-text{
  font-size: 37rpx;
}
.question-text-select{
  font-size: 37rpx;
  color: rgb(111, 148, 36);
  text-decoration: line-through;
}
.small-icon{
  width: 40rpx;
  height: 40rpx;
}

.choice-block{
  display: flex;
  padding-left: 40rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  align-items:center;
}
.choice-text{
  padding-left: 15rpx;
  font-size: 35rpx;
}
.choice-text-select{
  padding-left: 15rpx;
  font-size: 35rpx;
  color: sandybrown;
  font-weight: bold;
}
.first-select{
  color: sandybrown;
  font-weight: bold;
  font-size: 35rpx;
}
.ans-selector{
  position: relative;
  background-color: whitesmoke;
  width: 150rpx;
  height: 50rpx;
  font-size: 37rpx;
  text-align:center;
  margin-left: 15rpx;
}

.type-1{
  display: flex;
}

.conts{
  width:auto;
  left:10rpx;
  height:400rpx;
  border:1rpx solid gainsboro;
  margin-top:10rpx;
  position:relative;
  right:10rpx;
}

.input-comment{
  height:400rpx;
  font-size:32rpx;
  padding-top:45rpx;
  overflow:hidden;
  position:absolute;
  left:20rpx;
  width:auto;
  right:20rpx;
}
.currentWordNumber{
  font-size:28rpx;
  color:gray;
  position:absolute;
  left:83%;
  top:0;
}
.hint{
  font-size:25rpx;
  position:absolute;
  top:150rpx;
  left:5rpx;
  color:#FF6600;
}
.Question{
  position: absolute;
  padding-bottom:50rpx;
  height: 84%;
}
.submit{
  width: 100%;
  display: flex;
  height: 130rpx;
  justify-content: center;
  align-items: center;
  position:fixed;
  bottom:0rpx;
  background-color: white;
  border-radius: 10rpx;
}

.submit-img{
  height: 60rpx;
  width: 60rpx;
  font-weight: bold;
}

.submit-text{
  font-size: 35rpx;
  margin-left: 20rpx;
  font-weight: bold;
  opacity: 0.7;
}